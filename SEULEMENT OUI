  <script>
    const noButton = document.getElementById('no');
    const container = document.querySelector('.buttons');

    let scale = 1;

    noButton.addEventListener('mousemove', (e) => {
      const maxX = container.offsetWidth - noButton.offsetWidth;
      const maxY = container.offsetHeight - noButton.offsetHeight;

      const randomX = Math.random() * maxX;
      const randomY = Math.random() * maxY;

      scale *= 0.85; // rÃ©trÃ©cit Ã  chaque approche
      if (scale < 0.2) scale = 0.2;

      noButton.style.transform = `scale(${scale})`;
      noButton.style.left = randomX + 'px';
      noButton.style.top = randomY + 'px';
    });

    document.getElementById('yes').addEventListener('click', () => {
      document.body.innerHTML = `
        <div style="display:flex; justify-content:center; align-items:center; height:100vh; background:linear-gradient(135deg,#ff758f,#ffb3c1); font-family:Comic Sans MS; text-align:center;">
          <div>
